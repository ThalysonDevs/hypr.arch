{
    // App menu
    "custom/menu": {
        "format": "Û∞£á",
        "on-click": "~/.config/hypr/scripts/appmenu_toggle.sh",
        "tooltip-format": "Applications"
    },
    // Workspaces
    "hyprland/workspaces": {
        "show-special": true,
        "special-visible-only": false,
        "on-scroll-up": "hyprctl dispatch workspace r-1",
        "on-scroll-down": "hyprctl dispatch workspace r+1",
        "on-click": "activate",
        "active-only": false,
        "all-outputs": true,
        "format": "",
        "format-icons": {
            "urgent": "",
            "active": "",
            "default": ""
        },
        "persistent-workspaces": {
            "*": 5
        }
    },
    // System tray
    "tray": {
        "icon-size": 18,
        "spacing": 7
    },
    // Taskbar
    "wlr/taskbar": {
        "format": "{icon}",
        "icon-size": 16,
        "tooltip-format": "{title}\n\nClick to go to\nMiddle click to toggle fullscreen\nRight click to close",
        "on-click": "activate",
        "on-click-middle": "fullscreen",
        "on-click-right": "close",
        "max-length": 15,
        "app_ids-mapping": {
            "firefoxdeveloperedition": "firefox-developer-edition"
        },
        "rewrite": {
            "Firefox Web Browser": "Firefox",
            "Foot Server": "Terminal"
        }
    },
    // Rel√≥gio
    "clock": {
        "format": "{:L%A %d/%m - %H:%M:%S}",
        "format-alt": "{:L%I:%M:%S %p}",
        "interval": 1,
        "tooltip-format": "<tt>{calendar}</tt>",
        "smooth-scrolling-threshold": 0.01,
        "calendar": {
            "mode": "year",
            "mode-mon-col": 3,
            "weeks-pos": "right",
            "on-scroll": 1,
            "format": {
                "months": "<span color='#ffead3'><b>{}</b></span>",
                "days": "<span color='#ecc6d9'><b>{}</b></span>",
                "weeks": "<span color='#99ffdd'><b>W{}</b></span>",
                "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
                "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
            },
        },
    },
   
     // Memory
    "memory": {
        "format": "Óæè {}%",
        "tooltip-format": " {used} / {total}Gib RAM used",
        "interval": 5,
        "on-click": "foot -T btop -e btop",
        "min-length": 7,
        "max-length": 7
    },
    // CPU
    "cpu": {
        "format": "Ôíº {usage}%",
        "interval": 1,
        "on-click": "foot -T btop -e btop",
        "min-length": 7,
        "max-length": 7
    },
    // Wireplumber
    "wireplumber": {
        "format": "{icon}",
        "format-muted": "Óª® ",
        "tooltip-format": "{volume}%",
        "scroll-step": "5.0",
        "max-volume": "100",
        "format-icons": [
            "ÔÄ¶ ",
            "ÔÄß ",
            "ÔÄß ",
            "ÔÄ® ",
            "ÔÄ® "
        ],
        "min-length": 3,
        "max-length": 3,
        "on-click": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle",
        "scroll-step": 5
    },
    // Backlight:
    "backlight": {
        "format": "{icon}",
        "format-icons": [
            "Óèï",
            "Óèì",
            "Óèí",
            "Óèë",
            "Óèê",
            "Óèé",
            "Óèç",
            "Óèå",
            "Óèã",
            "Óèâ",
            "Óè£"
        ],
        "tooltip-format": "{percent}%",
        "min-length": 3,
        "max-length": 3,
        "scroll-step": 10
    },
